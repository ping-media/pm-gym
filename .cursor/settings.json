{
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.defaultFormatter": "intelephense",
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/.vscode": true,
    "**/.idea": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true
  },
  "editor.wordWrap": "on",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "files.associations": {
    "*.php": "php"
  },
  "intelephense.format.enable": true,
  "php.validate.enable": true,
  "php.suggest.basic": true,
  "php.executablePath": "/usr/bin/php",
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "rules.enabledRulesSets": [
    ".cursor/rules/wordpress-plugin-rules.js",
    ".cursor/rules/formatting-rules.js"
  ],
  "files.eol": "\n",
  "editor.rulers": [100],
  "cursor.snippets.suggestOnTriggerCharacters": true,
  "cursor.autocompletions.enabled": true
} 